container AllocExports: = Units, isHidden = "false"
{
	container PlanRegioResults
	{
		container PlanRegioKaarten := StateNaAllocatie/KostenBaten/PlanRegioKaarten;

		Unit<UInt32>  table := Invoer/SpecifiekeInstellingen/PlanRegio
		{
			attribute<string> BU_CODE                                       := /Invoer/RuimtelijkeData/StudieGebied/buurt/BU_CODE;
			attribute<Classifications/GebiedsOptie> GebiedsOptie            := StateNaAllocatie/PlanRegioWarmteAllocatie_REMOVE;

			attribute<units/kg_yr> CO2_gebouwen_AardGas_totaal              := EnergyResults/CO2/gebouwen/AardGas/totaal;
			attribute<units/kg_yr> CO2_gebouwen_Elektriciteit_totaal        := EnergyResults/CO2/gebouwen/Elektriciteit/totaal;
			attribute<units/kg_yr> CO2_gebouwen_totaal                      := EnergyResults/CO2/gebouwen/totaal;
			attribute<units/kg_yr> CO2_totaal                               := EnergyResults/CO2/totaal;
			attribute<units/Eur_yr> netverzwaring                           := netwerken/Elektriciteit/Kji_verzwaren;

			attribute<units/kW>      Woning_CapaciteitWarmteDeelnemers      := PlanRegioKaarten/BestaandeWoning/CapaciteitWarmteDeelnemers;
			attribute<units/nrAansl> Woning_nrAanslWarmteDeelnemers         := PlanRegioKaarten/BestaandeWoning/nrAanslWarmteDeelnemers;
			attribute<float64>       Woning_nrModelUnitsWarmteDeelnemers    := PlanRegioKaarten/BestaandeWoning/nrModelUnitsWarmteDeelnemers;
			attribute<units/GJ_yr>   Woning_VerbruikAalle                   := PlanRegioKaarten/BestaandeWoning/Verbruik/alle;
			attribute<units/Eur_yr>  Woning_WarmteVraagAlle                 := PlanRegioKaarten/BestaandeWoning/WarmteVraag/alle;
			attribute<units/GJ_yr>   Vj_WarmtePrimairD                      := StateNaAllocatie/KostenBaten/Vj_WarmtePrimairD;
			attribute<units/GJ_yr>   WarmteVraagDeelnemers                  := StateNaAllocatie/KostenBaten/WarmteVraag/deelnemers;

			attribute<units/Percent> Eigendom_Koopwoningen                  := rjoin(BU_CODE, Geography/RegioIndelingen/buurt/BU_CODE, Geography/RegioIndelingen/buurt/Eigendom/p_koopw);
			attribute<units/Percent> Eigendom_Huurwoningen_totaal           := rjoin(BU_CODE, Geography/RegioIndelingen/buurt/BU_CODE, Geography/RegioIndelingen/buurt/Eigendom/p_huurw);
			attribute<units/Percent> Eigendom_In_bezit_woningcorporatie     := rjoin(BU_CODE, Geography/RegioIndelingen/buurt/BU_CODE, Geography/RegioIndelingen/buurt/Eigendom/p_wcorpw);
			attribute<units/Percent> Eigendom_In_bezit_overige_verhuurders  := rjoin(BU_CODE, Geography/RegioIndelingen/buurt/BU_CODE, Geography/RegioIndelingen/buurt/Eigendom/p_ov_hw);
			attribute<units/Percent> Eigendom_Eigendom_onbekend             := rjoin(BU_CODE, Geography/RegioIndelingen/buurt/BU_CODE, Geography/RegioIndelingen/buurt/Eigendom/p_e_o_w);
			attribute<units/Percent> Eigendom_p_checksum                    := rjoin(BU_CODE, Geography/RegioIndelingen/buurt/BU_CODE, Geography/RegioIndelingen/buurt/Eigendom/p_checksum);//eigen check
			attribute<units/Percent> Inkomen_Huishoudens_met_laag_inkomen   := rjoin(BU_CODE, Geography/RegioIndelingen/buurt/BU_CODE, Geography/RegioIndelingen/buurt/Inkomen/p_hh_li);
			attribute<units/Percent> Inkomen_Huishoudens_met_hoog_inkomen   := rjoin(BU_CODE, Geography/RegioIndelingen/buurt/BU_CODE, Geography/RegioIndelingen/buurt/Inkomen/p_hh_hi);
			attribute<units/Percent> Inkomen_Huishoudens_met_midden_inkomen := rjoin(BU_CODE, Geography/RegioIndelingen/buurt/BU_CODE, Geography/RegioIndelingen/buurt/Inkomen/p_hh_mi);//berekend veld uit andere velden
			attribute<units/Percent> Inkomen_p_checksum                     := rjoin(BU_CODE, Geography/RegioIndelingen/buurt/BU_CODE, Geography/RegioIndelingen/buurt/Inkomen/p_checksum);//eigen check

			attribute<units/GJ_yr> GebiedsOptie_totaal                      := EnergyResults/Metervraag/gebouwen/WarmteKoudelevering/V_warmte;
			attribute<units/GJ_yr> Aardgas_totaal                           := EnergyResults/Metervraag/gebouwen/Gas/totaal;
			attribute<units/GJ_yr> Elektriciteit_totaal                     := EnergyResults/Metervraag/gebouwen/Elektriciteit/totaal;
		}

		container export := Rapportage/WriteTableToCSV(table, SubItem_PropValues(table,'name'), FolderInfo/OutputFolder+'/PR.csv');
		
		Unit<UInt32>  ESDL_table := Invoer/SpecifiekeInstellingen/PlanRegio
		{
			attribute<string>        BU_CODE                                := /Invoer/RuimtelijkeData/StudieGebied/buurt/BU_CODE;
			attribute<string>        GebiedsOptie                           := Classifications/GebiedsOptie/name[StateNaAllocatie/PlanRegioWarmteAllocatie_REMOVE];

			attribute<units/kg_yr>   CO2_gebouwen_AardGas                   := EnergyResults/CO2/gebouwen/AardGas/totaal;
			attribute<units/kg_yr>   CO2_gebouwen_Elektriciteit             := EnergyResults/CO2/gebouwen/Elektriciteit/totaal;
			attribute<units/kg_yr>   CO2_gebouwen                           := EnergyResults/CO2/gebouwen/totaal;
			attribute<units/kg_yr>   CO2                                    := EnergyResults/CO2/totaal;

			attribute<units/kW>      Woning_AansluitCapaciteitWarmte        := PlanRegioKaarten/BestaandeWoning/CapaciteitWarmteDeelnemers;
			attribute<units/nrAansl> Woning_nrAanslWarmte                   := PlanRegioKaarten/BestaandeWoning/nrAanslWarmteDeelnemers;
			attribute<float64>       Woning_nrModelUnitsWarmte              := PlanRegioKaarten/BestaandeWoning/nrModelUnitsWarmteDeelnemers;
			
			attribute<units/GJ_yr>   Woning_WarmteVerbruik                  := PlanRegioKaarten/BestaandeWoning/Verbruik/alle;
			attribute<units/GJ_yr>   WarmteVerbruik                         := StateNaAllocatie/KostenBaten/Vj_WarmtePrimairD;

			attribute<units/GJ_yr>   AardgasVerbruik_gebouwen               := EnergyResults/Metervraag/gebouwen/Gas/totaal;
			attribute<units/GJ_yr>   ElektriciteitVerbruik_gebouwen         := EnergyResults/Metervraag/gebouwen/Elektriciteit/totaal;
			attribute<units/GJ_yr>   AardgasVerbruik                        := EnergyResults/Metervraag/totaal_gas;
			attribute<units/GJ_yr>   ElektriciteitVerbruik                  := EnergyResults/Metervraag/totaal_elek;
		}

		container export_ESDL := Rapportage/WriteTableToCSV(ESDL_table, SubItem_PropValues(ESDL_table,'name'), FolderInfo/OutputFolder+'/PR_ESDL.csv');
	}

	container BCResults :=
		for_each_ne(Classifications/BebouwingsComponent/name,
			'AllocExportsBebouwingsComponent('+Quote(Classifications/BebouwingsComponent/name)+',Allocatie/'+Classifications/BebouwingsComponent/name+')');

	parameter<String> GenerateAll := 'Ready', ExplicitSuppliers = 
		"='PlanRegioResults/export/result;'"
		"+AsList('BCResults/'+Classifications/BebouwingsComponent/name+'/export/result',';')";
}